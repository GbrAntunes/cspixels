generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Pixel {
  id          String   @id @default(uuid())
  name        String
  description String?
  map         String
  side        String
  images      PixelImage[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PixelImage {
  id        String   @id @default(uuid())
  url       String
  order     Int
  pixelId   String
  pixel     Pixel    @relation(fields: [pixelId], references: [id], onDelete: Cascade)
}
